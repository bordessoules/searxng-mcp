# MCP Gateway Configuration
# Copy to .env and adjust as needed

# =============================================================================
# Server
# =============================================================================
MCP_PORT=8000

# =============================================================================
# Services (Docker recipes in docker/ folder)
# =============================================================================

# SearXNG search engine - start with: cd docker/searxng && docker-compose up -d
SEARXNG_URL=http://localhost:8080

# Docling document parser
# CPU service: cd docker/docling && docker-compose up -d
DOCLING_URL=http://localhost:8001

# GPU service with CUDA (faster, supports VLM picture descriptions)
# Start with: cd docker/docling && docker-compose -f docker-compose.gpu.yml up -d
DOCLING_GPU_URL=http://localhost:8002
USE_DOCLING_GPU=true

# Max document length (characters) - increase for very long documents
DOCUMENT_MAX_LENGTH=1000000

# =============================================================================
# Light RAG Chunking (for large PDFs)
# =============================================================================

# Chunk size in tokens (default: 4096, good for 8K context models)
CHUNK_SIZE_TOKENS=4096

# SQLite cache location for parsed documents
CACHE_DB_PATH=~/.cache/mcp-gateway/documents.db

# =============================================================================
# Vision/Summarization LLM (external API)
# =============================================================================

# Enable AI summarization for web pages and images
SUMMARIZE_ENABLED=true

# API endpoint (OpenAI-compatible)
# Examples:
#   LM Studio:    http://localhost:1234/v1
#   Ollama:       http://localhost:11434/v1
#   vLLM:         http://localhost:8000/v1
#   OpenRouter:   https://openrouter.ai/api/v1
SUMMARIZE_API_URL=http://localhost:1234/v1

# API key (leave empty for local servers)
SUMMARIZE_API_KEY=

# Model name
SUMMARIZE_MODEL=qwen3-vl-8b

# Timeout in seconds
SUMMARIZE_TIMEOUT=120

# =============================================================================
# Browser (Playwright MCP extension)
# =============================================================================

# Use headless mode (set to true if you don't have the Playwright extension)
# Default: false (uses real Chrome with your extensions)
PLAYWRIGHT_HEADLESS=false
